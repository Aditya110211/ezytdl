{
  "name": "ezytdl",
  "version": "1.0.0",
  "description": "Open source electron-based application acting as a wrapper of the YT-DLP client. ",
  "main": "index.js",
  "dependencies": {
    "@types/express": "^4.17.17",
    "@types/ws": "^8.5.4",
    "appdata-path": "^1.0.0",
    "express": "^4.18.2",
    "superagent": "^8.0.9",
    "ws": "^8.13.0"
  },
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sylviiu/ezytdl.git"
  },
  "author": "Syl",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/sylviiu/ezytdl/issues"
  },
  "homepage": "https://github.com/sylviiu/ezytdl#readme",
  "devDependencies": {
    "electron-builder": "^23.6.0",
    "electron": "^24.2.0"
  },
  "build": {
    "appId": "dev.sylviiu.ezytdl",
    "productName": "ezytdl",
    "portable": {
      "artifactName": "ezytdl-${version}-portable.exe"
    },
    "appImage": {
      "artifactName": "ezytdl-${version}-appimage.${ext}"
    },
    "dmg": {
      "artifactName": "ezytdl-${version}-dmg.${ext}"
    },
    "win": {
      "target": "portable"
    },
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}",
      "**/checks/*",
      "**/core/*",
      "**/endpoints/*",
      "**/html/*",
      "**/util/*"
    ]
  }
}
