{
  "name": "ezytdl",
  "version": "1.1.0",
  "description": "Open source electron-based application acting as a wrapper of the YT-DLP client. ",
  "main": "index.js",
  "dependencies": {
    "@types/express": "^4.17.17",
    "@types/ws": "^8.5.4",
    "appdata-path": "^1.0.0",
    "electron-updater": "^5.3.0",
    "express": "^4.18.2",
    "superagent": "^8.0.9",
    "ws": "^8.13.0"
  },
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "release": "electron-builder"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sylviiu/ezytdl.git"
  },
  "author": "Syl",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/sylviiu/ezytdl/issues"
  },
  "homepage": "https://github.com/sylviiu/ezytdl#readme",
  "devDependencies": {
    "electron": "^24.2.0",
    "electron-builder": "^23.6.0"
  },
  "build": {
    "appId": "dev.sylviiu.ezytdl",
    "productName": "ezytdl",
    "artifactName": "${productName}-Setup-${version}.${ext}",
    "publish": [
      {
        "provider": "github",
        "owner": "sylviiu",
        "repo": "ezytdl"
      }
    ],
    "win": {
      "target": [
        "portable",
        "nsis"
      ]
    },
    "linux": {
      "target": "AppImage"
    },
    "mac": {
      "target": "dmg"
    },
    "compression": "maximum",
    "asar": true,
    "files": [
      "html/*.html",
      "html/assets/**/*",
      "node_modules/**/*",
      "package.json",
      "index.js",
      "server.js",
      "getConfig.js",
      "defaultConfig.json",
      "util/*.js",
      "endpoints/*.js",
      "core/*.js",
      "checks/*.js"
    ]
  }
}
