{
    "appId": "dev.sylviiu.ezytdl",
    "productName": "ezytdl",
    "publish": [
        {
            "provider": "github",
            "owner": "sylviiu",
            "repo": "ezytdl"
        }
    ],
    "win": {
        "target": [
            "portable",
            "nsis"
        ]
    },
    "linux": {
        "target": "AppImage"
    },
    "mac": {
        "target": "dmg"
    },
    "compression": "store",
    "asar": true,
    "files": [
        "html/*.html",
        "html/assets/**/*",
        "node_modules/**/*",
        "package.json",
        "index.js",
        "server.js",
        "getConfig.js",
        "defaultConfig.json",
        "util/*.js",
        "util/*/*.js",
        "endpoints/*.js",
        "core/*.js",
        "checks/*.js"
    ]
}